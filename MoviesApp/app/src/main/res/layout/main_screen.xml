<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue1">

    <!-- android:background="@drawable/film_background" -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"

        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        >

        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_popcorn"

            />

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="MoviesApp"
            android:textColor="@color/blue2"
            android:textSize="40dp"
            android:background="@color/blue3"/>  -->
    </LinearLayout>




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:paddingLeft="55dp">

        <ImageView

            android:id="@+id/icon_npm"
            android:src="@drawable/ic_now_playing"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <TextView
            android:id="@+id/main_screen_now_playing_movies_textview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/now_playing_short"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="30dp"
            android:layout_marginBottom="50dp"
            android:textAllCaps="true"
            android:paddingLeft="10dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:paddingLeft="55dp">

        <ImageView

            android:id="@+id/icon_pt"
            android:src="@drawable/ic_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/main_screen_now_playing_movies_textview" />

        <TextView
            android:id="@+id/main_screen_popular_tv_textview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/popular_tv_short"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="30dp"
            android:layout_marginBottom="50dp"
            android:textAllCaps="true"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:paddingLeft="55dp">

        <ImageView

            android:id="@+id/icon_tr"
            android:src="@drawable/ic_top_rated"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/main_screen_now_playing_movies_textview" />

        <TextView
            android:id="@+id/main_screen_top_rated_textview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/top_rated"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="30dp"
            android:layout_marginBottom="50dp"
            android:textAllCaps="true"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingLeft="55dp">

        <ImageView

            android:id="@+id/icon_uc"
            android:src="@drawable/ic_upcoming"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/main_screen_now_playing_movies_textview" />

        <TextView
            android:id="@+id/main_screen_upcoming_textview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/upcoming"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="30dp"
            android:layout_marginBottom="50dp"
            android:textAllCaps="true"
            android:paddingLeft="10dp"/>

    </LinearLayout>










</LinearLayout>