<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    android:layout_margin="10dp"

    android:layout_marginBottom="20dp"
    >


    <LinearLayout
        android:id="@+id/list_item_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_image_wrap">

            <ImageView
                android:id="@+id/list_item_poster"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@color/blue2"
                android:src="@android:drawable/ic_menu_report_image"

                />

            <ProgressBar
                android:id="@+id/list_item_screen_loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"

               />

        </RelativeLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey2"
            android:layout_toRightOf="@id/list_item_image_wrap">


            <TextView
                android:id="@+id/list_item_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="tv show title"
                android:padding="10dp"
                android:textColor="@color/blue3"
                android:textSize="20dp"
                android:textStyle="bold"




                />


        </LinearLayout>

    </LinearLayout>














</LinearLayout>